                   onfocusout="$(this).parent().parent().css('filter', 'brightness(100%)')">
        </form>
    </div>
    <div class="right-sight">
        {{#unless this.user}}
            <div class="before-sign-in">
                <div class="my-teach">
                    <a href="#" class="nav-link">Teach on Udemy</a>
                    <div class="my-teach-content">
