                var sumPrice = 0;
                var sumPrePrice = 0;
                var i = 0;
            </script>
            <div class="after-sign-in">
                <a href="/instructor" class="nav-link">Instructor</a>
                <div class="my-learning">
                    <a href="#" class="nav-link">My learning</a>
                    <div class="my-learning-dropdown-content">
                        {{#if this.userCourses}}
                            {{#each this.userCourses}}
                                <a href="#">
                                    <div class="my-course-item">
                                        <img src="../../{{this.image}}" alt=""/>
                                        <p>{{this.name}}</p>
                                        <p class="start-learning">Start Learning</p>
                                        <progress max='100' value='0'></progress>
                                    </div>
                                </a>
                                <hr/>
                            {{/each}}
                            <a href="/my-courses/learning" class="content-btn nav-link">Go To My Learning</a>
                        {{else}}
                            <div class="my-empty-course">
                                <p>Start learning from over 130,000 courses today.</p>
                                <a href="#" class="content-btn nav-link">Browse Now</a>
                            </div>
                        {{/if}}
                        <script>
                        </script>
                    </div>
                </div>
                <div class="my-cart">
                    <div class="amount-in-cart">{{this.user.cart.length}}</div>
                    <a href="#" class="nav-link"><i class="fas fa-shopping-cart"></i></a>
                    <div class="my-cart-content">
                        {{#if this.userUnPaymentInvoice}}
                            {{#each this.userUnPaymentInvoice.courses}}
                                <a href="#">
                                    <div class="my-cart-item">
                                        <img src="../../{{this.image}}" alt=""/>
                                        <p>{{this.name}}</p>
                                        <p>{{this.author}}</p>
                                        <p><span>$ {{this.price}}&nbsp;&nbsp;</span><span>$ {{this.prePrice}}</span></p>
                                    </div>
                                </a>
                                <hr/>
                                <script>
                                    sumPrice += {{ this.price }}
                                            sumPrePrice += {{ this.prePrice }}
                                </script>
                            {{/each}}
                            <div class="my-cart-sum">
                                <p><span class="sum-price">$</span>&nbsp;&nbsp;<span class="sum-pre-price">$</span>
                                </p></span>
                                <a href="/cart" class="content-btn nav-link">Go To Cart</a>
                            </div>
                            <script>
                                $(".sum-price:first").html("$" + sumPrice);
                                $(".sum-pre-price:first").html("$" + sumPrePrice);
                            </script>
                        {{else}}
                            <div class="my-empty-cart">
                                <p>Your Cart Is Empty</p>
                                <a href="#" class="nav-link">Keep Shopping</a>
                            </div>
                        {{/if}}
