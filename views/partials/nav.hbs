                    <a href="#" class="nav-link"><i class="far fa-user"></i></a>
                    <div class="my-profile-content">
                        <a href="/user/me">
                            <div class="user-logo">
                                <img src="../../{{user.image}}" alt="">
                                <div class="text">
                                    <span>{{this.user.firstName}} {{this.user.lastName}}</span>
                                    <p>{{this.user.email}}</p>
                                </div>
                            </div>
                        </a>
